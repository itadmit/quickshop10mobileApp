{
  "expo": {
    "name": "QuickShop",
    "slug": "quickshop-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "scheme": "quickshop",
    "extra": {
      "supportsRTL": true,
      "router": {
        "root": "./app"
      },
      "eas": {
        "projectId": "46d095a6-3316-471d-bb1c-343391981373"
      }
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00785C"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quickshop.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "אנחנו צריכים גישה למצלמה כדי לסרוק ברקודים",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.quickshop.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00785C"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "root": "./app"
        }
      ],
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "אנחנו צריכים גישה למצלמה כדי לסרוק ברקודים"
        }
      ],
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#00785C"
        }
      ]
    ],
    "owner": "quickshopil"
  }
}
